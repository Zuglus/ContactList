@model Contact

@{
    ViewData["Title"] = "Создание";
}

<h1>Создать</h1>

<h4>Новый контакт</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic" class="control-label"></label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Organization" class="control-label"></label>
                <input asp-for="Organization" class="form-control" />
                <span asp-validation-for="Organization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model == null || Model.Phones.Count == 1)
                {

                    <label asp-for="Phones[0].PhoneNumber" class="control-label"></label>
                    <input asp-for="Phones[0].PhoneNumber" class="form-control" />
                    <span asp-validation-for="Phones[0].PhoneNumber" class="text-danger"></span>
                    <button type="submit" name="button" class="btn-primary" value="addPhoneField">+</button>
                }
                else
                {
                    @for (int i = 0; i < Model.Phones.Count; i++)
                    {
                        <label asp-for="Phones[i].PhoneNumber" class="control-label"></label>
                        <input asp-for="Phones[i].PhoneNumber" class="form-control" />
                        <span asp-validation-for="Phones[i].PhoneNumber" class="text-danger"></span>
                        <button type="submit" name="button" class="btn-primary" value="addPhoneField">+</button>
                        <button type="submit" name="button" class="btn-secondary" value="delPhoneField">-</button>
                    }
                }
            </div>
            <div class="form-group">
                @if (Model == null || Model.Emails.Count == 1)
                {

                    <label asp-for="Emails[0].EmailAdress" class="control-label"></label>
                    <input asp-for="Emails[0].EmailAdress" class="form-control" />
                    <span asp-validation-for="Emails[0].EmailAdress" class="text-danger"></span>
                    <button type="submit" name="button" class="btn-primary" value="addEmailField">+</button>
                }
                else
                {
                    @for (int i = 0; i < Model.Emails.Count; i++)
                    {
                        <label asp-for="Emails[i].EmailAdress" class="control-label"></label>
                        <input asp-for="Emails[i].EmailAdress" class="form-control" />
                        <span asp-validation-for="Emails[i].EmailAdress" class="text-danger"></span>
                        <button type="submit" name="button" class="btn-primary" value="addEmailField">+</button>
                        <button type="submit" name="button" class="btn-secondary" value="delEmailField">-</button>
                    }
                }
            </div>
            <div class="form-group">
                @if (Model == null || Model.Skypes.Count == 1)
                {

                    <label asp-for="Skypes[0].SkypeNumber" class="control-label"></label>
                    <input asp-for="Skypes[0].SkypeNumber" class="form-control" />
                    <span asp-validation-for="Skypes[0].SkypeNumber" class="text-danger"></span>
                    <button type="submit" name="button" class="btn-primary" value="addSkypeField">+</button>
                }
                else
                {
                    @for (int i = 0; i < Model.Skypes.Count; i++)
                    {
                        <label asp-for="Skypes[i].SkypeNumber" class="control-label"></label>
                        <input asp-for="Skypes[i].SkypeNumber" class="form-control" />
                        <span asp-validation-for="Skypes[i].SkypeNumber" class="text-danger"></span>
                        <button type="submit" name="button" class="btn-primary" value="addSkypeField">+</button>
                        <button type="submit" name="button" class="btn-secondary" value="delSkypeField">-</button>
                    }
                }
            </div>
            <div class="form-group">
                @if (Model == null || Model.Others.Count == 1)
                {

                    <label asp-for="Others[0].OtherField" class="control-label"></label>
                    <input asp-for="Others[0].OtherField" class="form-control" />
                    <span asp-validation-for="Others[0].OtherField" class="text-danger"></span>
                    <button type="submit" name="button" class="btn-primary" value="addOtherField">+</button>
                }
                else
                {
                    @for (int i = 0; i < Model.Others.Count; i++)
                    {
                        <label asp-for="Others[i].OtherField" class="control-label"></label>
                        <input asp-for="Others[i].OtherField" class="form-control" />
                        <span asp-validation-for="Others[i].OtherField" class="text-danger"></span>
                        <button type="submit" name="button" class="btn-primary" value="addOtherField">+</button>
                        <button type="submit" name="button" class="btn-secondary" value="delOtherField">-</button>
                    }
                }
            </div>
            <div class="form-group">
                <button type="submit" name="button" class="btn-primary" value="create">Добавить</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
